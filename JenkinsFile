pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/jefftokplo/nokia-snake-game.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("snake-game:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 8081:80 snake-game:3'
            }
        }
    }
}

